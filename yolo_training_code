from ultralytics import YOLO

# Load YOLOv8 classification model
model = YOLO("yolov8n-cls.pt")

# Train model
model.train(
    data=r"E:\anuser\dataset_split\data.yaml",  # YAML file specifying train/val and class names
    epochs=15,
    imgsz=256,
    batch=32,          # safer batch size
    augment=True
)
